<?xml version="1.0" encoding="UTF-8"?> 

<widget xmlns = "http://www.w3.org/ns/widgets"
 xmlns:gap = "http://phonegap.com/ns/1.0"
 id = "com.phonegap.app8"
 version = "1.0.0">
 
 <name> app8- Geolocalización </name>
 
 <description>
  Aplicacion que nos nuestra ubicación por medio de google maps
 </description>
 
 <author href="htpps://build.phonegap.com" email="zurielkyriat@gmail.com">
  Zuriel Kyriat-yael Larios Vaquero
 </author>
 
 <!-- Personaliza la aplicacion y plataforma-->
 <preference name="orientation" 	value="default"/>
 <!-- <preference name="orientation"  value="portrait"/>
  <preference name="orientation"  value="landscape"/>-->
 <preference name="target-device" 	value="universal"/>
 <preference name="fullscreen" 	value="true"/>
 <preference name="android-installLocation" 	value="auto"/>
 <preference name="permissions" 	value="INTERNET"/>
 
 <!--Plugins-->
 <plugin name="cordova-plugin-device" spec="~1.1.4" />
 <plugin name="cordova-plugin-vibration" spec="~2.1.3" />
 <plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
 
 <!-- Para accesar a paginas en internet-->
 <plugin name="cordova-plugin-geolocation" spec="2.4.3"/>
  <allow-intent href="htpps://*/*"/>
 <access origin="htpps://*/*"/>
 <allow-intent href="http://*/*"/>
 <access origin="htpp://*/*"/>
 <access origin="*"/>
 <allow-intent href="*"/>
 <plugin name="cordova-plugin-whitelist" source="npm"/>
 
 <!-- <allow-navigation href="http://*/*" />
 <allow-navigation href="https://*/*" />
 <allow-navigation href="data:*" />
 A wildcard can be used to whitelist the entire network,
 <allow-navigation href="*" /> -->

 
 <!--Colocar icono app -->
 <icon src="res/android/mdpi.png"/>
 
 </widget>
